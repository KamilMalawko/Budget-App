@page
@model Budget_App.Pages.IndexModel

<h1>Budget App</h1>
<h2>Plan your budget!</h2>

<h3>Add expense</h3>

<form id="expenseForm">
	<div>
		<label>Name:</label>
		<input name="NewExpense.Name"/>
	</div>
	<div>
		<label>Amount:</label>
		<input name="NewExpense.Amount" type="number" step="0.01"/>
	</div>
	<div>
		<label>Category:</label>
		<input name="NewExpense.Category"/>
	</div>
	<div>
		<label>Description:</label>
		<input name="NewExpense.Description"/>
	</div>
	<div>
		<label>Date:</label>
		<input name="NewExpense.Date" type="datetime-local" value="@Model.NewExpense.Date.ToString("yyyy-MM-ddTHH:mm")" />
	</div>
	<button type="submit">Submit</button>
</form>

<!-- Display Saved expenses-->
<h3> Saved expenses:</h3>
<table id="expenseTable" border="1">
	<thead>
		<tr>
			<th>Name</th>
			<th>Amount (PLN)</th>
			<th>Category</th>
			<th>Description</th>
			<th>Date</th>
			<th>Time</th>
		</tr>
	</thead>
	<tbody id="expenseTableBody">
		<!-- javascript magic here -->
	</tbody>
</table>

<!-- Display message when submit button is clicked -->

@if (Model.Message != null)
{
	<p><strong>@Model.Message</strong></p>
}


<!-- Scripts -->
@section Scripts {

	<!-- Save expenses -->
	<script src="~/js/save_expenses.js"></script>

	<!-- Display saved expenses -->
	<script src="~/js/display_expenses.js"></script>
}